{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"lib": ["ESNext.Array", "dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"sourceMap": true,
		"jsx": "preserve",
		"incremental": true,
		"target": "ES2020",
		"moduleResolution": "node"
	},
	"include": [
		"./cms/**/*.ts",
		"./cms/**/*.tsx",
		"./app/**/*.ts",
		"./app/**/*.tsx"
	],
	"exclude": ["node_modules"]
}
